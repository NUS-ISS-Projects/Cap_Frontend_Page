<Window 
    x:Class="DISTestKit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:lcs="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    Title="DIS Dashboard"
    Height="600"
    Width="1000"
>
    <Window.Resources>
        <CollectionViewSource x:Key="LogsCollection"
                            Source="{Binding LogsVm.Packets}">
        <CollectionViewSource.SortDescriptions>
            <scm:SortDescription PropertyName="Time"
                                Direction="Descending"/>
        </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" /> 
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Top toolbar or header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,10,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="1"    /> 
            </Grid.RowDefinitions>
        <StackPanel 
            Orientation="Horizontal" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"
            Background="{DynamicResource SystemControlAccentBaseHighBrush}" 
            Margin="0,10,20,30">
            <DatePicker
                x:Name="DtPicker"
                Width="200"
                Margin="0,0,12,0"
                SelectedDate="{Binding SelectedDate, Mode=TwoWay}" />
            <ui:TimePicker
                Width="200"
                ClockIdentifier="Clock24Hour"
                Margin="0,0,5,0"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                SelectedTime="{Binding SelectedTime, Mode=TwoWay}" />
            <ui:Button
                Command="{Binding PlayCommand}"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                MinWidth="50"
                Padding="8,0"
                Margin="12,0,5,0"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="{DynamicResource SystemControlAltLowBrush}" 
                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="Play32" />
                </ui:Button.Icon>
            </ui:Button>
            <ui:Button
                Command="{Binding AnalyzeCommand}"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                MinWidth="50"
                Padding="8,0"
                Margin="0,0,5,0"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="{DynamicResource SystemControlAltLowBrush}" 
                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="SlideSearch28" />
                </ui:Button.Icon>
            </ui:Button>
            <ui:Button
                Command="{Binding RefreshCommand}"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                MinWidth="50"
                Padding="8,0"
                Margin="0,0,12,0"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="{DynamicResource SystemControlAltLowBrush}" 
                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="ArrowCounterclockwise48" />
                </ui:Button.Icon>
            </ui:Button>
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="Gray"
            Height="1" />
        </Grid>

         <!-- ─────── Chart 1: Volume ─────── -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,0,5,0">
            <TextBlock
                Text="Volume"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,0,0,4"
                HorizontalAlignment="Left" />
            <lvc:CartesianChart
                Series="{Binding VolumeVm.Series}"
                XAxes="{Binding VolumeVm.XAxes}"
                YAxes="{Binding VolumeVm.YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}"
                Height="200"
                Background="Transparent" />
        </StackPanel>

        <!-- ─────── Chart 2: Throughput ─────── -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,5,0">
            <TextBlock
                Text="Throughput"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,0,0,4"
                HorizontalAlignment="Left" />
            <lvc:CartesianChart
                Series="{Binding ThroughputVm.Series}"
                XAxes="{Binding ThroughputVm.XAxes}"
                YAxes="{Binding ThroughputVm.YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}"
                Height="200"
                Background="Transparent" />
        </StackPanel>

        <!-- ─────── Chart 3: Retransmits ─────── -->
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="5,0,10,0">
            <TextBlock
                Text="Retransmits"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,0,0,4"
                HorizontalAlignment="Left" />
            <lvc:CartesianChart
                Series="{Binding RetransmitVm.Series}"
                XAxes="{Binding RetransmitVm.XAxes}"
                YAxes="{Binding RetransmitVm.YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}"
                Height="200"
                Background="Transparent" />
        </StackPanel>

        <Border
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Height="1"
            Background="LightGray"
            Margin="10,10,10,0" />

        <!--DIS messages received-->
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <ui:DataGrid
                    ItemsSource="{Binding Source={StaticResource LogsCollection}}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="Column"
                    RowHeight="30"
                    ColumnHeaderHeight="30"
                    FontSize="12"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="White"
                    Foreground="Black">

                <ui:DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/> 
                        <Setter Property="Padding" Value="4,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </ui:DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="No"
                        Binding="{Binding No}"
                        Width="50" />

                    <DataGridTextColumn
                        Header="Time"
                        Binding="{Binding Time, StringFormat=HH:mm:ss}"
                        Width="100" />

                    <DataGridTextColumn 
                        Header="Type" 
                        Binding="{Binding Type}" 
                        Width="100"/>

                    <DataGridTextColumn
                        Header="Source"
                        Binding="{Binding Source}"
                        Width="150" />

                    <DataGridTextColumn
                        Header="Destination"
                        Binding="{Binding Destination}"
                        Width="150" />

                    <DataGridTextColumn
                        Header="Protocol"
                        Binding="{Binding Protocol}"
                        Width="150" />

                    <DataGridTextColumn
                        Header="Info"
                        Binding="{Binding Info}"
                        Width="*" /> 
                </DataGrid.Columns>
            </ui:DataGrid>
        </Grid>
    </Grid>
</Window>

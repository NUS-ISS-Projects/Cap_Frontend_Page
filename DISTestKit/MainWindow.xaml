<Window 
    x:Class="DISTestKit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:lcs="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    Title="DIS Dashboard"
    Height="600"
    Width="1000"
>

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Top toolbar or header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,10,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="1"    /> 
            </Grid.RowDefinitions>
        <StackPanel 
            Orientation="Horizontal" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"
            Background="{DynamicResource SystemControlAccentBaseHighBrush}" 
            Margin="0,10,20,30">
            <DatePicker
                x:Name="DtPicker"
                Width="200"
                Margin="0,0,12,0"
                SelectedDate="{Binding SelectedDate, Mode=TwoWay}" />
            <ui:TimePicker
                Width="200"
                ClockIdentifier="Clock24Hour"
                Margin="0,0,5,0"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                SelectedTime="{Binding SelectedTime, Mode=TwoWay}" />
            <ui:Button
                Command="{Binding PlayCommand}"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                MinWidth="50"
                Padding="8,0"
                Margin="12,0,5,0"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="{DynamicResource SystemControlAltLowBrush}" 
                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="Play32" />
                </ui:Button.Icon>
            </ui:Button>
            <ui:Button
                Command="{Binding AnalyzeCommand}"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                MinWidth="50"
                Padding="8,0"
                Margin="0,0,5,0"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="{DynamicResource SystemControlAltLowBrush}" 
                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="SlideSearch28" />
                </ui:Button.Icon>
            </ui:Button>
            <ui:Button
                Command="{Binding RefreshCommand}"
                MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                MinWidth="50"
                Padding="8,0"
                Margin="0,0,12,0"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="{DynamicResource SystemControlAltLowBrush}" 
                Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="ArrowCounterclockwise48" />
                </ui:Button.Icon>
            </ui:Button>
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="Gray"
            Height="1" />
        </Grid>
        
        <Grid Grid.Row="1" Grid.Column="0">
            <lvc:CartesianChart
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}" 
                Background="Transparent"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <lvc:CartesianChart
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}" 
                Background="Transparent"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2">
            <lvc:CartesianChart
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}" 
                Background="Transparent"/>
        </Grid>

        <!--DIS messages received-->
        <Grid Grid.Row="2" Grid.Column="0">
            <DataGrid 
                ItemsSource="{Binding Packets}"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                RowHeight="28"
                ColumnHeaderHeight="30"
                FontSize="12"
                Margin="0,10,10,0">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="No"
                        Binding="{Binding No}"
                        Width="40" />

                    <DataGridTextColumn
                        Header="Time"
                        Binding="{Binding Time, StringFormat=HH:mm:ss}"
                        Width="80" />

                    <DataGridTextColumn
                        Header="Source"
                        Binding="{Binding Source}"
                        Width="120" />

                    <DataGridTextColumn
                        Header="Destination"
                        Binding="{Binding Destination}"
                        Width="120" />

                    <DataGridTextColumn
                        Header="Protocol"
                        Binding="{Binding Protocol}"
                        Width="80" />

                    <DataGridTextColumn
                        Header="Length"
                        Binding="{Binding Length}"
                        Width="60" />

                    <DataGridTextColumn
                        Header="Info"
                        Binding="{Binding Info}"
                        Width="*" /> 
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>

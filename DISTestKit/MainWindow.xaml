<Window 
    x:Class="DISTestKit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:lcs="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    Title="DIS Dashboard"
    Height="600"
    Width="1000"
>

    <Grid Margin="20,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Top toolbar or header -->
        <StackPanel 
            Orientation="Horizontal" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"
            Background="{DynamicResource SystemControlAccentBaseHighBrush}" 
            Margin="0,10,0,10">
            <DatePicker
                Width="300"
                Margin="0,0,12,0"
                SelectedDate="{Binding SelectedDate, Mode=TwoWay}" />
            <ui:Button Content="Analyze" MinWidth="80" Margin="0,0,12,0" Command="{Binding AnalyzeCommand}" />
            <ui:Button Content="Refresh" MinWidth="80" Margin="0,0,12,0" Command="{Binding RefreshCommand}" />
        </StackPanel>
        
        <Grid Grid.Row="1" Grid.Column="0">
            <lvc:CartesianChart
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}" 
                Background="Transparent"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <lvc:CartesianChart
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}" 
                Background="Transparent"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2">
            <lvc:CartesianChart
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                AnimationsSpeed="00:00:00"
                EasingFunction="{x:Null}" 
                Background="Transparent"/>
        </Grid>

        <!--DIS messages received-->
        <Grid Grid.Row="2" Grid.Column="0">
            <DataGrid />
        </Grid>
        
        <!--Details of the selected DIS message-->
        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" >
            <DataGrid />
        </Grid>
    </Grid>
</Window>

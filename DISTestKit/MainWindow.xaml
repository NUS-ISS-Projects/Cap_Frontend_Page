<Window 
    x:Class="DISTestKit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:lcs="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
    xmlns:livechart="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    Title="DIS Dashboard"
    Height="600"
    Width="1000"
    Background="#EEF1FB">

    <Window.Resources>
        <CollectionViewSource x:Key="LogsCollection"
                            Source="{Binding LogsVm.Packets}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="No"
                                Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Side Navigation -->
        <StackPanel Grid.RowSpan="4" Grid.Column="0" Background="#FFFFFF" Margin="10,20,10,10">
            <TextBlock Text="ST Engineering" FontSize="12" FontWeight="Bold" Margin="10,10,0,10" HorizontalAlignment="Center"/>
            <Button Content="Dashboard" Margin="10,0,10,10" Style="{StaticResource NavigationButtonStyle}"/>
            <Button Content="Forecast" Margin="10,0,10,10" Style="{StaticResource NavigationButtonStyle}"/>
            <Button Content="Settings" Margin="10,0,10,10" Style="{StaticResource NavigationButtonStyle}"/>
        </StackPanel>

        <!-- Top toolbar or header -->
        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="10,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel 
                Orientation="Horizontal" 
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,10,0,0"
                Background="{DynamicResource SystemControlAccentBaseHighBrush}">

                <ui:Button
                    Content="Today"
                    MinWidth="40"
                    Margin="10,0,0,0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{DynamicResource SystemControlAltLowBrush}" 
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                </ui:Button>
                <ui:Button
                    Content="Week"
                    MinWidth="40"
                    Margin="10,0,0,0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{DynamicResource SystemControlAltLowBrush}" 
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                </ui:Button>
                <ui:Button
                    Content="Month"
                    MinWidth="40"
                    Margin="10,0,0,0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{DynamicResource SystemControlAltLowBrush}" 
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                </ui:Button>

                <ui:Button
                    Command="{Binding PlayCommand}"
                    MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                    MinWidth="50"
                    Margin="10,0,10,0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{DynamicResource SystemControlAltLowBrush}" 
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Play32" />
                    </ui:Button.Icon>
                </ui:Button>
                <ui:Button
                    Command="{Binding RefreshCommand}"
                    MinHeight="{Binding ActualHeight, ElementName=DtPicker}"
                    MinWidth="50"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="{DynamicResource SystemControlAltLowBrush}" 
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowCounterclockwise48" />
                    </ui:Button.Icon>
                </ui:Button>
            </StackPanel>
        </Grid>

        <!-- ─────── Volume Line chart ─────── -->
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="10,0,0,0">
            <StackPanel Margin="0,0,0,0">
                <TextBlock
                     Text="Traffic Volume"
                     FontSize="16"
                     FontWeight="Bold"
                     FontFamily="Arial"
                     Margin="0,0,0,4"
                     HorizontalAlignment="Left" />
                <lvc:CartesianChart
                     Series="{Binding VolumeVm.Series}"
                     XAxes="{Binding VolumeVm.XAxes}"
                     YAxes="{Binding VolumeVm.YAxes}"
                     AnimationsSpeed="00:00:00"
                     EasingFunction="{x:Null}"
                     Height="200"
                     Background="White" />
            </StackPanel>
        </Grid>

        <!-- ─────── Logs ─────── -->

        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="10,0,0,10">

            <StackPanel>
                <ui:DataGrid
                    ItemsSource="{Binding LogsVm.Packets}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="Column"
                    RowHeight="30"
                    ColumnHeaderHeight="30"
                    FontSize="12"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="White"
                    Foreground="Black" Height="268">

                    <ui:DataGrid.ColumnHeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="BorderBrush" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="Padding" Value="4,0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </ui:DataGrid.ColumnHeaderStyle>

                    <ui:DataGrid.Columns>
                        <DataGridTextColumn
                            Header="No"
                            Binding="{Binding No}"
                            Width="100" />

                        <DataGridTextColumn
                            Header="Time"
                            Binding="{Binding Time, StringFormat=HH:mm:ss}"
                            Width="100" />

                        <DataGridTextColumn 
                            Header="Type" 
                            Binding="{Binding Type}" 
                            Width="100"/>

                        <DataGridTextColumn
                            Header="Source"
                            Binding="{Binding Source}"
                            Width="100" />

                        <DataGridTextColumn
                            Header="Destination"
                            Binding="{Binding Destination}"
                            Width="100" />

                        <DataGridTextColumn
                            Header="Protocol"
                            Binding="{Binding Protocol}"
                            Width="100" />

                        <DataGridTextColumn
                            Header="Info"
                            Binding="{Binding Info}"
                            Width="*" />
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </StackPanel>
        </Grid>
        <!-- Log Session details -->
        <StackPanel Grid.RowSpan="4" Grid.Column="4" Background="#FFFFFF" Margin="10,20,10,10">
        </StackPanel>
    </Grid>
</Window>
